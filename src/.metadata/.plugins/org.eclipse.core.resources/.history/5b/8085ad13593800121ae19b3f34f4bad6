package seabattle;

public class Ship {

    private char type;
    private char rotation;
    private int life;

    private char x, y;  //x&y of head

    public Ship() {
        rotation = 'd';
        isDead = false;
    }

    public void setRotation(char rotation) {
        this.rotation = rotation;
    }

    public char getRotation() {
        return rotation;
    }

    public void setType(char type) {
        this.type = type;
        this.life = type;
    }

    public char getType() {
        return type;
    }

    public void Rotate()
    {
        if(rotation == 'd') rotation = 'l';
        else if(rotation == 'l') rotation = 'd';
    }

    public char getX() {
        return x;
    }

    public char getY() {
        return y;
    }

    public void setX(char x) {
        this.x = x;
    }

    public void setY(char y) {
        this.y = y;
    }

    public int getLife() {
        return life;
    }

    public void setLife(int life) {
        this.life = life;
    }

	public boolean isDead() {
		if (life > 0)
			return true;
		else
			return false;
	}

}
